---
import { Icon } from "astro-icon/components";

interface Props {
    class?: string;
    hideFree?: boolean;
}

const { class: className, hideFree } = Astro.props;
---

<ul
    class:list={[
        "text-xs space-x-4 text-gray-600 dark:text-gray-400",
        className,
    ]}
>
    <li class="inline-block">
        <Icon name="fa6-regular:circle-check" class="inline-block ms-2 mb-1" />
        5-minute setup
    </li>
    {
        !hideFree && (
            <li class="inline-block">
                <Icon
                    name="fa6-regular:circle-check"
                    class="inline-block ms-2 mb-1"
                />
                Free forever
            </li>
        )
    }
    <li class="inline-block">
        <Icon name="fa6-regular:circle-check" class="inline-block ms-2 mb-1" />
        No card required
    </li>
</ul>
