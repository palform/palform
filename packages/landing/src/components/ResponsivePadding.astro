---
interface Props {
    class?: string;
    fluid?: boolean;
}
const { class: classList, fluid } = Astro.props;

("2xl:px-32 xl:px-24 lg:px-16 px-10 flex items-center lg:gap-16 gap-10");
---

<div class="w-full flex justify-center">
    <div
        class:list={[
            "w-full",
            fluid
                ? "2xl:px-32 xl:px-24 lg:px-16 px-6"
                : "px-6 md:px-12 xl:px-20 max-w-7xl",
            classList,
        ]}
    >
        <slot />
    </div>
</div>
