---
import HomeSecBadge from "./HomeSecBadge.astro";
import HomeSecHeading from "./HomeSecHeading.astro";
import ResponsivePadding from "../ResponsivePadding.astro";

interface Props {
    title: string;
    id?: string;
    badge?: string;
    class?: string;
}
const { title, id, badge, class: className } = Astro.props;
---

<ResponsivePadding class:list={["text-center", className]}>
    <section>
        {badge && <HomeSecBadge>{badge}</HomeSecBadge>}
        <HomeSecHeading size="big" class="mt-3 mb-4" {id}>
            {title}
        </HomeSecHeading>

        <slot />
    </section>
</ResponsivePadding>
