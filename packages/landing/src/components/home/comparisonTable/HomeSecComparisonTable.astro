            </ComparisonTableCol>
            <ComparisonTableCol center large>
                <ComparisonTableMark check={true} />
            </ComparisonTableCol>
            <ComparisonTableCol center large>
                <ComparisonTableMark check={false} />
            </ComparisonTableCol>
        </ComparisonTableRow>
        <ComparisonTableRow>
            <ComparisonTableCol>
                Friendly real-human support
            </ComparisonTableCol>
            <ComparisonTableCol center large>
                <ComparisonTableMark check={true} />
            </ComparisonTableCol>
            <ComparisonTableCol center>If you're lucky</ComparisonTableCol>
        </ComparisonTableRow>
        <ComparisonTableRow>
