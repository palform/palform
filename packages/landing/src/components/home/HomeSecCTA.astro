---
import Button from "../Button.astro";
import ResponsivePadding from "../ResponsivePadding.astro";

interface Props {
    title: string;
    href: string;
    class?: string;
}

const { title, class: className, href } = Astro.props;
---

<section
    class:list={[
        "h-96 w-full bg-gradient-to-bl from-primary-800 dark:from-primary-900/50 to-primary-600 dark:to-primary-600/50 flex justify-center items-center",
        className,
    ]}
>
    <ResponsivePadding>
        <h1 class="text-center text-white font-display text-5xl font-medium">
            {title}
        </h1>
        <p class="text-center mt-2 text-white text-xl xl:mx-20">
            <slot />
        </p>

        <div class="flex justify-center mt-8">
            <Button
                href={href}
                light
                class="plausible-event-name=Get+Started+Banner"
                >Get started now</Button
            >
        </div>
    </ResponsivePadding>
</section>
