---
interface Props {
    size: "big" | "normal";
    id?: string;
    class?: string;
}

const { size, id, class: classList } = Astro.props;
const Element = size === "big" ? "h2" : "h3";
---

<div class="relative">
    {id && <p class="invisible -top-28 absolute" {id} />}

    <Element
        class:list={[
            "font-display dark:text-gray-100",
            size === "big" ? "text-5xl" : "text-4xl",
            classList,
        ]}
    >
        <slot />
    </Element>
</div>
