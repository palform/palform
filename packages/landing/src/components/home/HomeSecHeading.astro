---
interface Props {
    size: "big" | "normal";
    id?: string;
    class?: string;
}

const { size, id, class: classList } = Astro.props;
const Element = size === "big" ? "h2" : "h3";
---

<Element
    class:list={[
        "font-display dark:text-gray-100",
        size === "big" ? "text-6xl" : "text-4xl",
        classList,
    ]}
    {id}
>
    <slot />
</Element>
