---
import Button from "../Button.astro";
import LittleIcons from "../LittleIcons.astro";

const { class: className } = Astro.props;
---

<div
    class:list={[
        className,
        "w-full py-8 px-8 md:px-12 rounded-3xl bg-gradient-to-r from-primary-500 to-purple-600 dark:from-primary-700 dark:to-purple-900 text-left text-white shadow-2xl shadow-primary-500/50 dark:shadow-xl dark:shadow-primary-800/50",
    ]}
>
    <div class="flex justify-between flex-col md:flex-row">
        <div class="w-full md:w-1/3 mr-4">
            <h1 class="font-display text-6xl font-medium">Free forever</h1>

            <p class="mt-2">
                That's right. These features will stay free as long as Palform
                exists.
            </p>

            <Button
                light
                href="https://dash.palform.app/auth/signup"
                class="mt-4">Start now</Button
            >
            <LittleIcons class="mt-3 !text-gray-100" hideFree />
        </div>
        <div class="flex flex-col md:flex-row md:gap-8 mt-6 md:mt-2">
            <ul class="text-2xl font-display">
                <li>Unlimited responses</li>
                <li>10 forms</li>
                <li>20 questions/form</li>
                <li>1 user</li>
                <li>All question types</li>
            </ul>
            <ul class="text-2xl font-display">
                <li>Hidden fields</li>
                <li>E-signatures</li>
                <li>Unlimited file uploads</li>
                <li>Conditional branching</li>
                <li>Email + webhook</li>
            </ul>
        </div>
    </div>
</div>
